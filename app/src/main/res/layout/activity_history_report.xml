<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".History_report">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="backbtn"
            android:background="@drawable/ic_baseline_arrow_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Transaction details"
            android:textColor="@color/main"
            android:textSize="20sp"/>

    </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/alice"
                    android:textSize="16sp"
                    android:layout_alignParentStart="true"
                    android:text="Sender Name"/>

                <TextView
                    android:id="@+id/sender_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:fontFamily="@font/roboto_condensed_light"
                    android:textColor="@color/black"
                    android:paddingEnd="15dp"
                    android:layout_alignParentEnd="true"
                    android:text="John Paul" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row2"
                android:layout_below="@id/row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/alice"
                    android:textSize="16sp"
                    android:layout_alignParentStart="true"
                    android:text="Sender Phone"/>

                <TextView
                    android:id="@+id/sender_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:fontFamily="@font/roboto_condensed_light"
                    android:textColor="@color/black"
                    android:paddingEnd="15dp"
                    android:layout_alignParentEnd="true"
                    android:text="09012345678" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row3"
                android:layout_below="@id/row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/alice"
                    android:textSize="16sp"
                    android:layout_alignParentStart="true"
                    android:text="Sender Address"/>

                <TextView
                    android:id="@+id/sender_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:fontFamily="@font/roboto_condensed_light"
                    android:textColor="@color/black"
                    android:paddingEnd="15dp"
                    android:layout_alignParentEnd="true"
                    android:text="ikorodu road" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row4"
                android:layout_below="@id/row3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/alice"
                    android:textSize="16sp"
                    android:layout_alignParentStart="true"
                    android:text="Sender Destination"/>

                <TextView
                    android:id="@+id/sender_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:fontFamily="@font/roboto_condensed_light"
                    android:textColor="@color/black"
                    android:paddingEnd="15dp"
                    android:layout_alignParentEnd="true"
                    android:text="ikeja way" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row5"
                android:layout_below="@id/row4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/alice"
                    android:textSize="16sp"
                    android:layout_alignParentStart="true"
                    android:text="Dilevery type" />

                <TextView
                    android:id="@+id/distance_covered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:fontFamily="@font/roboto_condensed_light"
                    android:textColor="@color/black"
                    android:paddingEnd="15dp"
                    android:layout_alignParentEnd="true"
                    android:text="40km" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row6"
                android:layout_below="@id/row5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/alice"
                    android:textSize="16sp"
                    android:layout_alignParentStart="true"
                    android:text="Date delivered"/>

                <TextView
                    android:id="@+id/date_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:fontFamily="@font/roboto_condensed_light"
                    android:textColor="@color/black"
                    android:paddingEnd="15dp"
                    android:layout_alignParentEnd="true"
                    android:text="21-12-2022" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row7"
                android:layout_below="@id/row6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/alice"
                    android:textSize="16sp"
                    android:layout_alignParentStart="true"
                    android:text="Order Id"/>

                <TextView
                    android:id="@+id/Sender_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:fontFamily="@font/roboto_condensed_light"
                    android:textColor="@color/black"
                    android:paddingEnd="15dp"
                    android:layout_alignParentEnd="true"
                    android:text="SP-3478" />

            </RelativeLayout>




        </RelativeLayout>


</LinearLayout>